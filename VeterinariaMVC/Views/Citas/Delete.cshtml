@model VeterinariaMVC.Models.Cita

@{
    ViewData["Title"] = "Delete";
}

<a asp-action="Index" class="btn btn-primary bi bi-arrow-left "> Regresar al Index</a>

<h1 class="text-center">Cancelar Cita</h1>

<h3>Deseas Cancelar la cita?</h3>
<div>
    <h4>Cita</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Paciente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MascotaId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-2">
            Veterinaria
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VeterinariaId)
        </dd>
        <dt class="col-sm-2">
            Veterinario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VeterinarioId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CitaId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
    </form>
</div>

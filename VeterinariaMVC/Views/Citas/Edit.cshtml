@model VeterinariaMVC.Models.Cita

@{
    ViewData["Title"] = "Edit";
}
<a asp-action="Index" class="btn btn-primary bi bi-arrow-left "> Regresar al Index</a>

<h1 class="text-center">Editar</h1>

<h4>Reprogramar | Editar Cita</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group" style="margin-top: 10px">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px">
                <label asp-for="MascotaId" class="control-label"></label>
                <input asp-for="MascotaId" class="form-control" />
                <span asp-validation-for="MascotaId" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px">
                <label asp-for="VeterinariaId" class="control-label"></label>
                <input asp-for="VeterinariaId" class="form-control" />
                <span asp-validation-for="VeterinariaId" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px">
                <label asp-for="VeterinarioId" class="control-label"></label>
                <input asp-for="VeterinarioId" class="form-control" />
                <span asp-validation-for="VeterinarioId" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
